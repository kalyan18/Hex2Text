package {	import flash.display.MovieClip;	import flash.events.Event;	import flash.text.TextField;	import flash.ui.Keyboard;	public class Main extends MovieClip	{		var key = KeyEdit;		public function Main()		{			key.initialize(stage);			hexIn.restrict = "A-Fa-f0-9x#";			addEventListener(Event.ENTER_FRAME, onFrame);		}		function onFrame(e)		{			if (key.isPressed(Keyboard.ENTER))			{				var str = delFromStr(hexIn.text, "0x");				str = delFromStr(str, "#");				var hexNums:Array = new Array();				if(Math.round(str.length/2) != str.length/2)				{					str = str.substr(0, str.length-1);				}				for(var i = 0; i < str.length/2; i++)				{					hexNums.push(Number("0x"+str.substr(i*2, 2)));				}				str = "";				for(i in hexNums)				{					str += String.fromCharCode(hexNums[i]);				}				hexOut.text = str;			}		}		static function delFromStr(str:String, del:String):String		{			var cIndex:int;			var cStr:String;			var fin:Boolean = false;			cIndex = str.indexOf(del);			if (cIndex == -1)			{				return str;			}			while (cIndex == 0)			{				if(!cStr)				{					cStr = str;				}				cStr = cStr.substr(del.length);				cIndex = cStr.indexOf(del);				if (cIndex == -1)				{					fin = true;				}			}			while (!fin)			{				if(!cStr)				{					cStr = str;				}				var part1:String;				var part2:String;				cIndex = cStr.indexOf(del);				part1 = cStr.substring(0,cIndex);				part2 = cStr.substr(cIndex+del.length);				cStr = part1 + part2;				if (cStr.indexOf(del) == -1)				{					fin = true;				}			}			return cStr;		}	}}